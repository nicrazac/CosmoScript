<MainClass>

    sizeX: sizeX
	sizeY: sizeY
	startX: startX
	startY: startY
	gName: gName
	gAuthor: gAuthor
	generateMap: generateMap
	left: left
	right: right
	up: up
	locationCall: locationCall
	lookDesc: lookDesc
	nameDesc: nameDesc
	itemList: itemList
	radioNorth: radioNorth
	radioEast: radioEast
	radioSouth: radioSouth
	radioWest: radioWest
	northTags: northTags
	eastTags: eastTags
	southTags: southTags
	westTags: westTags
	
    do_default_tab: False

    TabbedPanelItem:
        text: "Map"
        GridLayout:
            cols: 1
            size: root.width, root.height
			GridLayout:
				size_hint_y: None
				height: self.parent.height * .15
                cols:4
				
				Label:
					text: "Title:"
				TextInput:
					id: gName
					multiline: False
				Label:
					text: "Author:"
				TextInput:
					id: gAuthor
					multiline: False
				Label:
					text: "Size X:"
				TextInput:
					id: sizeX
					multiline: False
				Label:
					text: "Start X:"
				TextInput:
					id: startX
					multiline: False
				Label:
					text: "Size Y:"
				TextInput:
					id: sizeY
					multiline: False
				Label:
					text: "Start Y:"
				TextInput:
					id: startY
					multiline: False
			Button:
				size_hint_y: None
				height: self.parent.height * .1
				id: generateMap
				text: "Load/Generate Map"
				on_press: root.genMap()
			GridLayout:
				size_hint_y: None
				height: self.parent.height * .65
				cols: 1
				id: gridPlot
			GridLayout:
				size_hint_y: None
				height: self.parent.height * .1
				cols: 4
				id: gridNav
				Button:
					id: up
					text: "North"
					on_press: root.moveUp()
				Button:
					id: down
					text: "South"
					on_press: root.moveDown()
				Button:
					id: left
					text: "West"
					on_press: root.moveLeft()
				Button:
					id: right
					text: "East"
					on_press: root.moveRight()
				
	TabbedPanelItem:
		text: "Populate"
		GridLayout:
			cols: 1
            size: root.width, root.height
			GridLayout:
				cols: 3
				Label:
					id: locationCall
				Button:
					text: "Commit Spot"
					on_press: root.commitSpot()
				Button:
					text: "Delete Spot"
					on_press: root.deleteSpot()
				Label:
					text: "Name of Spot:"
				TextInput:
					id: nameDesc
				Button:
					text: "Update"
					on_press: root.updateName()
				Label:
					text: "'Look' Description:"
				TextInput:
					id: lookDesc
				Button:
					text: "Update"
					on_press: root.updateLook()
				Label:
					text: "Items:"
				TextInput:
					id: itemList
				Button:
					text: "Update"
					on_press: root.updateItems()
			GridLayout:
				cols: 2
				Label:
					text: "Directions:"
				GridLayout:
					cols: 4
					Label:
						text: "North"
					Label:
						text: "East"
					Label:
						text: "South"
					Label:
						text: "West"
					CheckBox:
						id: radioNorth
						on_press: root.enableNorth()
					CheckBox:
						id: radioEast
						on_active: root.enableEast()
					CheckBox:
						id: radioSouth
						on_active: root.enableSouth()
					CheckBox:
						id: radioWest
						on_active: root.enableWest()
					TextInput:
						id: northTags
						disabled: True
					TextInput:
						id: eastTags
						disabled: True
					TextInput:
						id: southTags
						disabled: True
					TextInput:
						id: westTags
						disabled: True
			Button:
				text: "Update Directions"
				on_press: root.updateDirections()
			
	TabbedPanelItem:
		text: "Test"
		GridLayout:
			cols: 1
            size: root.width, root.height