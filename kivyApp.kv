<MainClass>

    sizeX: sizeX
	sizeY: sizeY
	startX: startX
	startY: startY
	gName: gName
	gAuthor: gAuthor
	generateMap: generateMap
	left: left
	right: right
	up: up
	
    do_default_tab: False

    TabbedPanelItem:
        text: "Map"
        GridLayout:
            cols: 1
            size: root.width, root.height
			GridLayout:
				size_hint_y: None
				height: self.parent.height * .15
                cols:4
				
				Label:
					text: "Title:"
				TextInput:
					id: gName
				Label:
					text: "Author:"
				TextInput:
					id: gAuthor
				Label:
					text: "Size X:"
				TextInput:
					id: sizeX
				Label:
					text: "Start X:"
				TextInput:
					id: startX
				Label:
					text: "Size Y:"
				TextInput:
					id: sizeY
				Label:
					text: "Start Y:"
				TextInput:
					id: startY
			Button:
				size_hint_y: None
				height: self.parent.height * .1
				id: generateMap
				text: "Load/Generate Map"
				on_press: root.genMap()
			GridLayout:
				size_hint_y: None
				height: self.parent.height * .65
				cols: 1
				id: gridPlot
			GridLayout:
				size_hint_y: None
				height: self.parent.height * .1
				cols: 4
				id: gridNav
				Button:
					id: left
					text: "Left"
					on_press: root.moveLeft()
				Button:
					id: right
					text: "Right"
					on_press: root.moveRight()
				Button:
					id: up
					text: "Up"
					on_press: root.moveUp()
				Button:
					id: down
					text: "Down"
					on_press: root.moveDown()
	TabbedPanelItem:
		text: "Populate"
		GridLayout:
			cols: 1
            size: root.width, root.height
					

                