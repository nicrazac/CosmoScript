<MainClass>

    sizeX: sizeX
	sizeY: sizeY
	generateMap: generateMap
	
    do_default_tab: False

    TabbedPanelItem:
        text: "Create"
        GridLayout:
            cols: 1
            size: root.width, root.height
			GridLayout:
				size_hint_y: None
				height: self.parent.height * .2
                cols:2
				
				Label:
					size_hint_x: None
					width: 200
					text: "Size X:"
				TextInput:
					#size_hint_y: None
					#height: self.parent.height * .5
					id: sizeX
					width: 200
				Label:
					size_hint_x: None
					width: 200
					text: "Size Y:"
				TextInput:
					#size_hint_y: None
					#height: self.parent.height * .5
					id: sizeY
					width: 200
			Button:
				size_hint_y: None
				height: self.parent.height * .1
				id: generateMap
				text: "Generate"
				on_press: root.genMap()
			GridLayout:
				size_hint_y: None
				height: self.parent.height * .7
				cols: 1
				id: gridPlot
					

                